# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.loginScreen()
GET     /home                           controllers.Application.teacherHome()
GET     /home                           controllers.Application.studentHome()

# Create new test
POST	/tests				controllers.Application.createTest()
GET		/tests					controllers.Application.getTests()
GET		/tests/:id				controllers.Application.publishTest(id:Long)

# 	JSON queries (DEBUG ONLY)
GET		/testsAnswers			controllers.Application.getTestAnswers()

# Add Questions
GET		/questions					controllers.Application.getQuestions()
POST	/tests/questions/:id		controllers.Application.addQuestion(id: Long)

# Take a test
GET		/takeTest/:id						controllers.Application.beginTest(id: Long)
POST 	/takeTest/						controllers.Application.markQuestion(answer: Int,id: Long)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file            	   controllers.Assets.at(path="/public", file)

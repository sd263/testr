# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.loginScreen()
POST	/							controllers.Application.login(name:String, password:String)
GET     /t/:id                          controllers.Application.teacherHome(id: Long)
GET     /s/:id                           controllers.Application.studentHome(id:Long)


# Create Student/class
POST	/newstudent						controllers.Application.createStudent()
POST	/newteacher						controllers.Application.createTeacher()
POST	/newclass					controllers.Application.createClassroom(id:Long)
POST	/s/joinclass				controllers.Application.joinClassroom()

# Create new test
POST	/create				controllers.Application.createTest(id:Long)
GET		/publish/:id				controllers.Application.publishTest(id:Long)
POST	/create/:id			controllers.Application.addQuestion(id: Long)

# Take a test
GET		/takeTest/:studentId/:id						controllers.Application.beginTest(id: Long, studentId: Long)
POST 	/takeTest/						controllers.Application.markQuestion(current: Int, answer: Int,id: Long)

# reviewing test
GET		/tResult/:id					controllers.Application.reviewTest(id : Long)

# 	JSON queries (DEBUG ONLY)
GET		/testsAnswers			controllers.Application.getTestAnswers()
GET		/tests					controllers.Application.getTests()
GET		/questions					controllers.Application.getQuestions()
GET		/testreview					controllers.Application.getTestReview()
GET		/students				controllers.Application.getStudents()
GET		/croom				controllers.Application.getClassrooms()
GET		/teacher			controllers.Application.getTeachers()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file            	   controllers.Assets.at(path="/public", file)
